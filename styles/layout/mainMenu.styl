.navbar
  position fixed
  top 0
  left 0
  right 0
  background-color #282828
  padding 1rem
  color white
  text-align center
  z-index 5
  font-size 1.25rem
  .mainMenu__switcher
    float right
    cursor pointer
    z-index 6
    @media all and (min-width:768px)
      opacity 0
  #menu
    &:checked ~ .mainMenu
      opacity 1
  .mainMenu
    margin 0
    transition 0.5s ease-in-out
    @media all and (max-width:768px)
      width 85%
      opacity 0
    &__item
      display inline-block
    &__button
      padding 0.4rem 1rem
      margin 0.6rem 0.2rem
      border-radius 0.35rem
      color white
      text-decoration none
      font-weight 600
      &:hover
        background-color #383838