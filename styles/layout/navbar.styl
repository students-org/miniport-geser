.navbar
  height 3rem
  background #282828
  position fixed
  display block
  left 0
  right 0
  top 0
  transition .5s ease-in-out
  // z-index 1000
  @media (max-width 768px)
    height 100vh
    top -100vh
    z-index 1000
    font-size 3rem
    line-height 5rem
    font-weight 700
  &List
    text-align center
    margin .8rem auto
    @media (max-width 768px)
      top -3rem
      text-align center
      margin .8rem auto
      height 100vh
      margin 1rem 0
    &__item
      display inline-block
      padding 0 1.5rem
      @media (max-width 768px)
        padding 0 .5rem
        display block
      & a
        text-decoration none
        color #fff
  &__switcher
    display inline-block
    position fixed
    right 2rem
    top .5rem
    & i
      padding-left 1rem
  & .navbar__switcher
    opacity 0

input.navbar__switcher
  display none
  &:checked
    ~ .navbar
      top 0
      & .navbar__switcher
        opacity 1
        transition 1.5s ease-in-out