.copyrights
  background-image url('./images/bg.png')
  background-color #303030
  text-align center
  padding-bottom 8rem
  .container
    max-width 50%
    @media (max-width 768px)
      max-width 100%
  &__listItems
    @extend $shadowText_black
    display block
    color #666
    list-style none
    font-size 0.9rem
    font-weight 100
    padding 0.75 0.75rem
    letter-spacing -0.025rem
    &__item
      display inline-block
      padding 0 0.75rem 
      a
        @extend $shadowText_black
        color #666
        transition 0.3s ease-in-out
      a:hover
        color #43bff0
      &:not(:last-child)
        border-right 1px solid rgba(white, 0.2)
      
